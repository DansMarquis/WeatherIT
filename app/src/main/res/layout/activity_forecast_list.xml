<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecastCard"
    android:layout_width="150dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/fday"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ftime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/fdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/ficon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:textColor="#999999" />
        <ImageView
            android:id="@+id/forecastIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/finding">
        </ImageView>
        <TextView
            android:id="@+id/ftemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/lower"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="#89CFF0"
                android:layout_gravity="center"
                android:src="@drawable/ic_lower">
            </ImageView>

            <TextView
                android:id="@+id/ftempMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#89CFF0"
                android:layout_marginRight="12dp"
                android:layout_alignParentBottom="true" />
            <ImageView
                android:id="@+id/higher"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:tint="#ff7f7f"
                android:layout_gravity="center"
                android:src="@drawable/ic_higher">
            </ImageView>
            <TextView
                android:id="@+id/ftempMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#ff7f7f"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>